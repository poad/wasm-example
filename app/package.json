{
  "name": "wasm-example",
  "private": true,
  "scripts": {
    "preinstall": "cargo install wasm-pack",
    "dev": "pnpm wasm && next dev",
    "build": "pnpm wasm && next build",
    "start": "pnpm wasm && next start",
    "analyze": "ANALYZE=true next build",
    "export": "pnpm wasm && next build",
    "wasm": "wasm-pack build --target web wasm",
    "lint": "eslint -c eslint.config.mjs 'src/**/*.{ts,tsx}'",
    "lint-fix": "eslint --fix -c eslint.config.mjs 'src/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.3",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "typescript": "^5.7.2"
  },
  "engines": {
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!",
    "pnpm": ">=8.7.1",
    "node": ">=20.0.0"
  }
}
